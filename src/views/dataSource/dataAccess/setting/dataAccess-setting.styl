.data-access-setting {
    display: flex;
    justify-content: space-between;
    height: 100%;
    .set-main {
        background-color: #ffffff;
        width: 100%;
        height: 100%;
        .scrollable {
            height: calc(100% - 63px);  
            overflow-y: auto;  
        }
        .header {
            display: flex;
            justify-content: space-between;
            .data_con {
                width: 201px;
                height: 19px;
                font-size: 16px;
                font-family: Microsoft YaHei;
                font-weight: bold;
                color: rgba(1, 4, 15, 1);
                line-height: 48px;
                margin-left: 21px;
            }
            .data_btn {
                margin-right: 20px;
                margin-top: 9px;
                width: 88px;
                height: 30px;
            }
        }
        .set_bar {
            display: flex;
            justify-content: flex-end;
            padding: 0 20px;
            margin-top: 20px;
            .search_input {
                width: 240px;
                height: 32px;
                margin-right: auto;
            }
            button {
                margin-left: 10px;
            }
        }
        .table {
            margin-top: 24px;
        }
        .set_btn {
            padding: 12px;
            float: right;
            width: 240px;
        }
    }
}