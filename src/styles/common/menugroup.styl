@import "var.styl"
.screen-manage {
  height 100%
  .menu_tips {
    font-size: 12px;
    color: #999;
    text-align: center;
    margin: 1em 0;
  }
}
.menu-wrap{
  flex: 1;
  overflow-y: auto;
  &::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  &::-webkit-scrollbar-thumb {
      background-color: rgba(0, 0, 0, .05);
      border-radius: 5px;
      -webkit-box-shadow: inset 1px 1px 0 rgba(0, 0, 0, .1);
  }
  &:hover::-webkit-scrollbar-thumb {
      background-color: rgba(0, 0, 0, .2);
      border-radius: 5px;
      -webkit-box-shadow: inset 1px 1px 0 rgba(0, 0, 0, .1);
  }
  &::-webkit-scrollbar-thumb:hover {
      background-color: rgba(0, 0, 0, .4);
      -webkit-box-shadow: inset 1px 1px 0 rgba(0, 0, 0, .1);
  }
  &::-webkit-scrollbar-track {
      border-radius: 5px;
      -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0);
      background-color: white;
  }
  .&::-webkit-scrollbar-track:hover {
      -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .4);
      background-color: rgba(0, 0, 0, .01);
  }
  .group {
    &.is-folder {
      .items {
        .item {
          padding-left: 20px;
        }
      }
    }
    ul {
        margin: 0;
    }
    .file-icon {
      display: inline-block;
      margin-right: 5px;
      margin-bottom: -3px;
      height: 16px;
      width: 16px;
    }
    .folder {
      height: 30px;
      line-height: 30px;
      position: relative;
      &.dragable-current {
        border: 1px solid #627CFF;
      }
      &.folder-active,
      &:hover {
        cursor: pointer;
        z-index: 3;
        background: #627CFF;
        color: #fff;
        .menu {
          display: inline-block;
        }
        .title-span,
        .folder-icon {
            color: #ffffff;
        }
      }
    }
    .title {
      padding: 0 28px 0 14px;
      height: 30px;
      line-height: 30px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: 12px;
      .folder-icon {
          font-size: 14px;
          margin-right: 5px;
      }
    }
    .menu {
      display: none;
      position: absolute;
      right: 30px;
      top: 3px;
      height: 28px;
      line-height: 28px;
      min-height: auto;
      .caret-down {
        width: 0;
        height: 0;
        border: 6px solid white;
        border-color: white transparent transparent transparent;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
      }
    }
    .items {
      .item {
        height: 30px;
        line-height: 30px;
        padding: 0;
        position: relative;
        font-size: 14px;
        font-family: Microsoft YaHei;
        font-weight: 400;
        color: #FFFFFF;
        &.file-active,
        &:hover {
          cursor: pointer;
          z-index: 3;
          background: #627CFF;
          color: #fff;
          .menu {
            display: inline-block;
          }
          .title {
              color: #ffffff
          }
        }
      }
    }
  }
}