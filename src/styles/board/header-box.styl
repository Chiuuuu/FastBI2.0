@import '../common/var.styl' // 画板顶部
  .board-header {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 62px;
  // height: 7.33%;
  line-height: 40px;
  z-index: 205;
  background: #040d2e;
  transition: all 0.5s ease-in 0.1s;
  .header-title {
    position: relative;
    width: 300px;
    height: 62px;
    // height: 7.33%;
    display: inline-block;
    .iconfont {
      display: inline-block;
      vertical-align: top;
      height: 100%;
      line-height: 40px;
      cursor: pointer;
      color: $color-blue;
      padding: 0 5px;
    }
    span {
      display: inline-block;
      vertical-align: top;
      font-size: 14px;
      line-height: 40px;
      color: $color-text-primary;
      padding-left: 20px;
      margin-top: 10px;
      width: 100%;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    &-text {
      background: none;
    }
    .focus {
      position: absolute;
      left: 20px;
      top: 10px;
      border: 1px solid #ccc;
      width: 300px;
    }
    .nofocus {
      width: 300px;
      position: absolute;
      left: 20px;
      top: 10px;
      opacity: 0;
    }
  }
  .control {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 62px;
    // height: 7.33%;
    line-height: 24px;
    .drag-list-menu {
      width: 300px;
      height: 100%;
      display: flex;
      justify-content: space-around;
      .list-group {
        position: relative;
        width: 50%;
        height: 100%;
        text-align: center;
        margin-top: 12px;
        .list-group-header {
          position: relative;
          height: 100%;
          box-sizing: border-box;
          font-size: 12px;
          color: $color-text-primary;
          cursor: pointer;
          &:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            border-top: 2px solid transparent;
          }
        }
        &.hovered {
          .list-group-header {
            // color: $color-primary;
            &:before {
              // border-top: 2px solid $color-primary;
            }
          }
        }
        .list-group-body {
          position: absolute;
          top: 50px;
          left: 0;
          height: 450px;
          background-color: #fff;
          border: 1px solid grey;
          overflow:auto;
          .left {
            width: 60px;
            font-size: 12px;
            background-color: #2b2e36;
            .selected {
              color: black;
              background: white;
            }
            .tab-title{
                   overflow: hidden;
                   text-overflow: ellipsis;
                   white-space: nowrap;
                   padding:0 5px;
                   width: 100%;
                   margin:0;
            }
          }
          .right {
            flex: 1;
            text-align: left;
            padding: 0px 0 0 20px;
            overflow:auto;
            .list-item {
              position: relative;
              // display: inline-block;
              width: 90px;
              height: 10px;
              cursor: pointer;
              transition: all 0.2s ease-in-out;
              color: $color-text-info;
              // background-color: #282a30;
              box-sizing: border-box;
              border: 1px solid transparent;
              margin-right: 20px;
              margin-bottom: 20px;
              .img {
                position: absolute;
                width: 100%;
                height: 100%;
                background-repeat: no-repeat;
                background-size: 100% 100%;
                background-position: 0 0;
                &.ve-line {
                  background-image: url('../assets/images/ve-line.png');
                }
                &.ve-histogram {
                  background-image: url('../assets/images/ve-histogram.png');
                }
                &.ve-bar {
                  background-image: url('../assets/images/ve-bar.png');
                }
                &.ve-pie {
                  background-image: url('../assets/images/ve-pie.png');
                }
                &.ve-radar {
                  background-image: url('../assets/images/ve-radar.png');
                }
                &.ve-map {
                  background-image: url('../assets/images/ve-map.png');
                }
              }
              .front {
                position: absolute;
                width: 100%;
                height: 30px;
                bottom: 0;
                margin-bottom: -30px;
                line-height: 30px;
                span {
                  display: inline-block;
                  vertical-align: middle;
                  text-indent: 7px;
                  font-size: 12px;
                }
              }
              &:hover {
                color: #677cf7;
                // border: 1px solid $color-primary;
              }
            }
            .material{
              width: 380px;
            .material-body {
              flex:1;
              overflow-y:scroll;
              height:465px;
              .material-content{
              display: flex;
              flex-wrap: wrap;
              .material-box {
                margin:8px;
                width:100px;
                .material-text{
                    margin:0;
                    width:100%;
                    color:black;
                    text-align:center;
                    text-overflow: ellipsis;
                    overflow: hidden;
                    white-space: nowrap;}
                .material-img {
                  width: 95px;
                  height:65px;
                  cursor: pointer;
                }
              }}
            }
            .material-footer{
                height:30px;
               display:flex;
               flex-direction:row-reverse;
               padding-right: 10px;
               .pageSize-box{
                   color:grey;
                   margin-right:10px;
               }
            }
            }
          }
        }
      }
    }
  }
  .right-box {
    width: 300px;
    height: 62px;
    height: 7.33%;
    line-height: 28px;
    // display: inline-block;
    display: flex;
    justify-content: space-around;
    text-align: center;
    .iconfont {
      cursor: pointer;
      width: 65px;
      font-size: 18px;
      transition: 0.3s;
      &:hover {
        // color: $color-primary;
      }
    }
    .item {
      font-size: 12px;
      margin-top: 10px;
      cursor: pointer;
    }
  }
}
