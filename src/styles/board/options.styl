// 页面设置
.page-config, .block-config {
  position relative
  .f-flex1 {
   flex: 1;
  }

  .f-clear-width {
    width: auto;
  }

  .gui-field {
    display: flex;
    justify-content: space-between;
    min-height: 24px;
    color: $color-text-info;
    font-size: 12px;
    padding: 6px 0px;

    &.has-padding {
      @extend .h-padding;
  }

    .gui-field-name {
      padding-right: 5px;
      line-height: 28px;
      // flex: 0  0 auto;
      width: 80px;
    }
    .gui-field-container {
      flex:1;
      justify-content:flex-end;
      min-height: 24px;
      display: flex;
      // width: 175px;
      font-size: 12px;
      align-items: center;
      .gui-inline {
        display: inline-block;
        // width: 85px;
        .label {
          color: #647279;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          font-size: 12px;
          line-height: 18px;
          text-align: left;
        }
        &:first-child {
          margin-right: 5px;
        }
        &:last-child {
          margin: 0px;
        }
        .longwidth{
            width:120px;
        }
      }
    }
  }
  .gui-wrap {
    position: relative;
    padding-left: 13px;
    &.disable {
      color: #647279;
    }
    .wrap-name {
      line-height: 40px;
      span {
        display: inline-block;
        vertical-align: middle;
      }
      .wrap-arrow {
        transition: .3s
        &.show {
          transform: rotate(90deg)
        }
        &.simple {
          cursor: pointer;
        }
      }
      .wrap-label {
        padding: 0 5px 0 2px;
      }
      .wrap-toggle {
        cursor: pointer;
      }
      .iconfont {
        line-height: normal;
      }
    }
    .gui-field {
      padding-left: 18px;
    }
    &:after {
      content: ''
      position: absolute;
      top: 40px;
      left: 18px;
      bottom: 0;
      border-left: 1px solid #282f3a;
    }
  }
  .gui-group {
    .gui-group-name {
      border-bottom: 1px solid $color-border;
      line-height: 26px;
      cursor: pointer;
      padding: 4px 5px 6px 18px;
      text-align: left;
      font-size: 12px;
      color: $color-primary;
    }
    .gui-group-content {
      background: #fff;
      padding: 5px 0;
      .gui-field {
        padding-left: 20px;
      }
    }
  }
  .gui-color {
    display: inline-block;
    margin: 0 4px 4px 0
  }
  .group-title {
    padding: 0 10px;
  }
}

