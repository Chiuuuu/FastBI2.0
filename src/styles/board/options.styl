.board-options {
  position: absolute;//控制位置
  // top: 40px;
  height: 100%;
  // right: 300px;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  z-index: 200;
  background: #ffffff;
  border-right: 1px solid #EFEFEF;
  box-shadow: -2px 0 2px 0 rgba(0, 0, 0, 0.1);
  transition: all .3s;
  transform: translate3d(100%, 0, 0)
  .header-title {
    height: 40px;
    line-height: 40px;
    text-align: center;
    background: $color-admin-ctrl;
    color: $color-primary;
    border-bottom: 1px solid $color-border;
  }
  .tabs {
    width: 100%;
    display: flex;
    height: 30px;
    line-height: 27px;
    .tab-item {
      flex: 1;
      height: 100%;
      display: inline-block;
      text-align: center;
      background: #27343e;
      transition: .2s;
      outline: 0;
      color: #bcc9d4;
      font-size: 12px;
      cursor: pointer;
      border-top: 2px solid transparent;
      &.active {
        background: $color-admin-options-bg;
        color: $color-primary;
        border-top: 2px solid $color-primary;
      }
      .iconfont {
        font-size: 16px;
      }
    }
  }
  .options-body {
    background: $color-admin-options-bg;
    height: calc(100% - 50px);
    padding-bottom: 20px;
    overflow-y: scroll;
    overflow-x: hidden;
  }
  .expand-hover {
    position: absolute;
    top: 50%;
    left: 0;
    width: 16px;
    height: 160px;
    margin-top: -80px;
    margin-left: -16px;
    cursor: pointer;
    .inner {
      position: relative;
      width: 100%;
      height: 100%;
      background: $color-admin-options-hover;
      opacity: 0;
      transition: all .2s;
      i {
        position: absolute;
        width: 18px;
        height: 18px;
        font-size: 18px;
        top: 50%;
        margin-top: -9px;
        &:hover {
          color: #2d8cf0;
        }
      }
      &:before, &:after {
        content: ''
        position: absolute
        left: 0;
      }
      &:before {
        top: 0;
        margin-top: -16px;
        border-top: 16px solid transparent;
        border-right: 16px solid $color-admin-options-hover;
      }
      &:after {
        bottom: 0;
        margin-bottom: -16px;
        border-left: 16px solid transparent;
        border-top: 16px solid $color-admin-options-hover;
      }
    }
    &:hover .inner {
      opacity: 1;
    }
  }
  &.is-expand {
    transform: translate3d(0, 0, 0)
  }
}

