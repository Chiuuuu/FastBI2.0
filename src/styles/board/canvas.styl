    z-index:200;
}
.canvas-main {
  position: relative;
  width: calc( 100% - 290px );
  height: 98%;
  // left: 300px;
  overflow: hidden;
  user-select: none;
  // top: -900px;
  background: #26282d url('../assets/images/dot.png') repeat;
  .canvas-panel-wrap {
    width: 100%;
    height: calc(100% - 30px);
    overflow: hidden;
    position: relative;
    .screen-shot {
      position: relative;
      margin:auto;
      .canvas-panel {
        position: absolute;
        transform-origin: 0 0;
        top: 50%;
        left: 50%;
        transition: .2s all ease-in-out;
        background-size: cover, contain;
        background-position: center, right bottom;
        background-repeat: no-repeat, no-repeat;
        box-shadow: rgba(0, 0, 0, .5) 0 0 30px 0;
        line-height: 1.5;
        .drop-panel {
          width: 100%;
          height: 100%;
          background-size: cover;
        }
      }
    }
  }
}

// 需要覆盖bin-ui的样式
.canvas-panel-wrap .bin-scrollbar__wrap {
  overflow-x: hidden;
}
