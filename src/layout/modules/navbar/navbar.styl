.navbar {
    height: 60px;
    background: #fff;
    position: relative;
    .sidebar-unfold-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }
    .user {
        margin-right: 20px;
        span {
            position: relative;
            padding-right: 45px;
            font-size: 16px;
            color: #282828;
            img {
                position: absolute;
                right: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 36px;
                border-radius: 50%;
                border: 1px solid rgba(240, 240, 240, 1);
            }
        }
    }
}